<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:AvaloniaApplication1"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication1.TrackPageView">
<SplitView x:Name="MainSplitView"
             CompactPaneLength="45"
             DisplayMode="CompactInline"
             OpenPaneLength="240"
             PaneBackground="#2b2b2b" 
             IsPaneOpen="True">
    <SplitView.Pane>
      <DockPanel LastChildFill="True">
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top"
                    Spacing="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top">
         
          <Button Width="80" Height="32" Margin="10"  
                  Foreground="White" 
                  Background="#6c5ce7"
                  Click="Button_Click" >刷新</Button>
          
          <ListBox x:Name="Listbox1" Margin="2 0 0 0" Padding="0" >
            <ListBox.Styles>
              <Style Selector="ListBoxItem">
                <Setter Property="Padding" Value="12 8"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="Background" Value="#2b2b2b" />
                <Setter Property="Foreground" Value="White" /> 
             
              </Style>
            </ListBox.Styles>
            <ListBox.ItemTemplate>
              <DataTemplate DataType="{x:Type models:PhoneListItemTemplate}">
                <StackPanel Orientation="Horizontal" 
                        Tapped="StackPanel_Tapped"
                        HorizontalAlignment="Stretch" 
                        Background="Transparent">   
                   <TextBlock Text="{Binding name}"  Margin="5"/>
                </StackPanel>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </StackPanel>
      </DockPanel>
    </SplitView.Pane>

    <SplitView.Content>
      <Border CornerRadius="12 0 0 0" 
              Background="#3a3a3a" 
              BorderBrush="#6c5ce7" BorderThickness="0 0 0 1"> 
          <WebView x:Name="MainTrackWebView" />
      </Border>
    </SplitView.Content>
  </SplitView>

</UserControl>
